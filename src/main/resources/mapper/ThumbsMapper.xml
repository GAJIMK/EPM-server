<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dartmedia.dmss.mapper.ThumbsMapper">


  <insert id="create">   
        INSERT 
        INTO Thumbs
                (AccountId
                ,id) 
        VALUES
                (#{AccountId}
                ,#{id}) 
    </insert> <!-- insert, update는 리턴타입 없다. select만 --> 

 <select id="countById" resultType="Thumbs">
  SELECT id, COUNT(id) AS cnt 
  FROM Thumbs
  WHERE id=#{id} 
  GROUP BY id;
</select>
  
  <update id="update">
  UPDATE Board
  SET
      date=#{date}
      ,content=#{content}
      ,title=#{title}
     
  where id=#{id}
  </update>

  <select id="selectTop5" resultType="Thumbs">
    select b.title, b.id
    from board as b 
    inner join 
      (SELECT TOP 3 id, COUNT(id) AS cnt	
      FROM Thumbs 
      GROUP BY id 
      ORDER BY cnt DESC) as t
    on t.id = b.id;
  </select>

   <select id="readById" resultType="Board"> 
        SELECT  * 
        FROM    Board 
        WHERE   id=#{id} 
    </select> <!-- #을 쓰면 정수는 정수열, 문자는 문자열로, $는 String --> 

  <delete id ="deleteById">
    DELETE 
    FROM   Board
    WHERE Id=#{id}
  </delete>



</mapper>